<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>UMAPuwotSharp</RootNamespace>
    <AssemblyName>UMAPuwotSharp</AssemblyName>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PlatformTarget>x64</PlatformTarget>
    <RuntimeIdentifiers>win-x64;linux-x64</RuntimeIdentifiers>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    
    <!-- Package metadata -->
    <PackageId>UMAPuwotSharp</PackageId>
    <Version>1.0.0</Version>
    <Authors>Amin GHoliha</Authors>
    <Company>ID Soft AB</Company>
    <Product>UMAPuwotSharp</Product>
    <Description>Cross-platform C# library for UMAP dimensionality reduction based on uwot implementation with save/load and transform capabilities.</Description>
    <PackageTags>umap;uwot;dimensionality-reduction;machine-learning;embedding;manifold-learning</PackageTags>
    <RepositoryUrl>https://github.com/78Spinoza/UMAP.git</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
  </PropertyGroup>

  <!-- Include native libraries in the package and copy to output -->
  <ItemGroup>
    <Content Include="runtimes\**\*.*">
      <Pack>true</Pack>
      <PackagePath>runtimes\%(RecursiveDir)%(Filename)%(Extension)</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- Ensure native libraries are copied to referencing projects -->
  <ItemGroup>
    <None Include="runtimes\win-x64\native\uwot.dll" Condition="Exists('runtimes\win-x64\native\uwot.dll')">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="runtimes\linux-x64\native\libuwot.so" Condition="Exists('runtimes\linux-x64\native\libuwot.so')">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>